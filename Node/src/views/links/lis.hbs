<div class="container p-4">
  <div class="row">
    {{#each links}}
      <div class="col-m3">
        <div class="card text-center">
          <div class="card-body">
            <a href="">
              <h3 class="card-title text-uppercase">
                {{title}}
              </h3>
            </a>
            <p class="m-2">{{description}}</p>
            <p>{{timeago timestamp}}</p>
            <a href=""></a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>